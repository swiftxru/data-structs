{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}